<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.beknur.project">
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".News"
            android:label="@string/title_activity_news"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Tab1"
            android:label="@string/title_activity_tab1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".tab2"
            android:label="@string/title_activity_tab2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".tab3"
            android:label="@string/title_activity_tab3"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Collections"
            android:label="@string/title_activity_collections"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>
